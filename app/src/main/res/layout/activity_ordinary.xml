<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="gally.pointscalculator.MainActivity">

    <TextView
        android:id="@+id/Points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="50sp"
        android:layout_marginBottom="61dp"
        android:layout_above="@+id/subjects"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/O2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/H1"
        android:layout_alignBottom="@+id/O1"
        android:layout_alignStart="@+id/O5"
        android:background="@drawable/o2_btn"
        android:onClick="onButtonTap"/>

    <Button
        android:id="@+id/O1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:background="@drawable/o1_btn"
        android:onClick="onButtonTap"
        android:layout_below="@+id/subjects"
        android:layout_marginTop="16dp"
        android:layout_alignStart="@+id/O4" />

    <Button
        android:id="@+id/O3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/O2"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/O2"
        android:background="@drawable/o3_btn"
        android:onClick="onButtonTap" />

    <Button
        android:id="@+id/O4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/O1"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/O2"
        android:background="@drawable/o4_btn"
        android:onClick="onButtonTap" />

    <Button
        android:id="@+id/O5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/O4"
        android:layout_centerHorizontal="true"
        android:background="@drawable/o5_btn"
        android:onClick="onButtonTap" />

    <Button
        android:id="@+id/O6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/O5"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/O5"
        android:background="@drawable/o6_btn"
        android:onClick="onButtonTap" />

    <Button
        android:id="@+id/O7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/O4"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/O2"
        android:background="@drawable/o7_btn"
        android:onClick="onButtonTap" />

    <Button
        android:id="@+id/O8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/O7"
        android:layout_centerHorizontal="true"
        android:background="@drawable/o8_btn"
        android:onClick="onButtonTap" />

    <Button
        android:id="@+id/undo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/O8"
        android:layout_toRightOf="@id/O2"
        android:layout_marginLeft="20dp"
        android:background="@drawable/undo_btn"
        android:onClick="onButtonTap" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/O7"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/O2"
        android:layout_marginRight="20dp"
        android:background="@drawable/reset_btn"
        android:onClick="onButtonTap"  />

    <Button
        android:id="@+id/OL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/reset"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ol_btn"
        android:onClick="onButtonTap" />

    <Button
        android:id="@+id/HM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/OL"
        android:layout_toRightOf="@id/O2"
        android:layout_marginLeft="20dp"
        android:background="@drawable/hm_btn"
        android:onClick="onButtonTap" />

    <TextView
        android:id="@+id/subjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Number of Subjects entered: 0"
        android:textColor="@android:color/black" />

</android.widget.RelativeLayout>
